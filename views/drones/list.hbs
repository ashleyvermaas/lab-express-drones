<h2>Available drones</h2>

{{#each dronesFromDB}}
<h4>{{this.name}}</h4>
<p>Propellers: {{this.propellers}}</p>
<p>Speed: {{this.maxSpeed}}</p>
<a href="/drones/{{this.id}}/edit">Edit drone</a>

<form action="/drones/{{this.id}}/delete" method="POST">
    <button type="submit">Delete</button>
</form>
{{/each}}